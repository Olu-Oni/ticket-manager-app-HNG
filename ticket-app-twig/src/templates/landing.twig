    <!-- Features Section -->
    <section class="bg-indigo-50 py-10 pb-20 border-t-4 border-[var(--primary-light)]">
        <div class="max-w-[1440px] mx-auto px-6">
            <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">
                Why Choose TicketsPlease?
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
                <!-- Feature Box 1 -->
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition flex md:flex-col items-center">
                    <div class="w-16 h-16 sm:bg-indigo-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Easy Tracking</h3>
                        <p class="text-gray-600">Monitor all your tickets in one place with real-time status updates and progress tracking.</p>
                    </div>
                </div>

                <!-- Feature Box 2 -->
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition flex md:flex-col items-center">
                    <div class="w-16 h-16 sm:bg-green-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Lightning Fast</h3>
                        <p class="text-gray-600">Create, update, and resolve tickets in seconds with our intuitive interface.</p>
                    </div>
                </div>

                <!-- Feature Box 3 -->
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition flex md:flex-col items-center">
                    <div class="w-16 h-16 sm:bg-purple-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Secure & Reliable</h3>
                        <p class="text-gray-600">Your data is protected with industry-standard security measures and encryption.</p>
                    </div>
                </div>
            </div>
