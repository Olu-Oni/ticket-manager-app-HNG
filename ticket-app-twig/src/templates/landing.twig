        <!-- Hero Section with Wavy Background -->
        <section id="hero" class="relative flex-1 mx-auto px-6 pt-10 sm:pt-20 pb-10 overflow-hidden z-20">
            <!-- Decorative Circles -->
            <span class="absolute top-25 right-20 w-64 h-64 bg-indigo-200 rounded-full opacity-60 blur-sm"></span>
            <span class="absolute top-10 right-20 w-24 h-24 bg-purple-200 rounded-full opacity-70 blur-xs"></span>

            <div class="relative max-w-4xl mx-auto text-center">
