{% extends 'components/layout.twig' %}

{% block content %}
    <main>
    <!-- Header & Hero Section -->
    <section class="min-h-screen relative flex flex-col">
        <header class="w-full mx-auto px-6 py-4 flex justify-between items-center">
            <h2 class="text-xl font-bold">TicketsPlease</h2>
            {# {% if not isAuthenticated() %} #}
                <a href="?route=auth/login" class="btn btn-1 font-semibold shadow-lg ">Login</a>
            {# {% endif %} #}
